<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <!--display user email or login form-->
      <% if (user) { %>
        <span class="navbar-text"> <%= user.email %></span>
      <form method="POST" class="form-inline" action="/logout">
        <button type="submit" class="btn btn-danger">Log Out</button>
        </form>
      <% } else { %>
        <!--If there is no username, show login form-->
        <form method="POST" class="form-inline" action="/login">
        <input type="text" name="username" placeholder="Username">
        <button type="submit" class="btn btn-primary">Login</button>
      </form> 
      <% } %>
    </div>
  </nav>
</header>